<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form method="post" action="/dashboard" class="box">
                    <h1>Login</h1>
                    <p class="text-muted"> Please enter your email and password</p>
                    {{#if alert}} <p class="alert"> Incorrect Email or Password <br> Please register if you do not have an account</p> {{/if}}
                    {{#if alert2}} <p class="alert"> Server issues <br> We apologize for the inconvenience, please try checking back later</p> {{/if}}
                    <input type="text" name="email" placeholder="Email"> 
                    <input type="password" name="password" placeholder="Password"> 
                    <a class="forgot text-muted" href="#">Forgot password?</a> 
                    <input type="submit" name="login" value="Login">
                    <p class="text-muted"> Don't have an account? </p>
                    <a href="/register"  title="Register">Register</a>
                </form>
            </div>
        </div>
    </div>
</div>

